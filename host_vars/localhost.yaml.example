---
# Hostname configuration
hostname_pretty: "DAO-NB-XXXX"
hostname_static: "dao-nb-xxxx"

# Disk encryption
luks_device: "/dev/nvme0n1p3"
luks_passphrase: "your-disk-encryption-passphrase"
tpm2_pcr_bank: "sha256"
tpm2_pcr_ids: "7"

# AD Realm
ad_domain: "daoas.local"
ad_user: "administrator"
ad_password: "your-ad-password-here"
ad_computer_ou: "OU=Linux,DC=daoas,DC=local"
ad_allowed_group: "Linux-Users"

# VPN Configuration
vpn_enabled: true
vpn_server: "vpn.dao.as"
vpn_authgroup: "dao.int"
vpn_username: "your-vpn-username"
vpn_password: "your-vpn-password"
vpn_auto_connect: true